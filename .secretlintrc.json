{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    }
  ],
  "ignoreFilePathList": [
    "**/node_modules/**",
    "**/.git/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**",
    "**/out/**",
    "**/coverage/**",
    "**/*.lock",
    "**/*.snap",
    "**/*.png",
    "**/*.jpg",
    "**/*.jpeg",
    "**/*.gif",
    "**/*.ico",
    "**/*.woff",
    "**/*.woff2",
    "**/*.ttf",
    "**/*.eot",
    "**/.env",
    "**/.env.*",
    "**/.env.local",
    "**/.env.*.local",
    "**/firebase-sa.json",
    "**/service-account*.json",
    "**/serviceAccount*.json",
    "**/*credentials*.json",
    "**/*secret*.json"
  ]
}
